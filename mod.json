{
    "Name" : "Titanfall-Legends",
    "Description" : "Add a Battle Royale gamemode to Titanfall 2.",
    "RequiredOnClient": true,
    "Version": "1.0.0",
    "LoadPriority": 1,
    "ConVars": [
        {
            "Name": "TBR_min_players",
            "DefaultValue": "2",
            "HelpString": "The Minimum required Player"
        },
        {
            "Name": "BR_canSpawnTitan",
            "DefaultValue": "0",
            "HelpString": "Allow Titan Drop"
        },
        {
            "Name": "BR_canUseBoost",
            "DefaultValue": "0",
            "HelpString": "Allow Boost Usage"
        },
        {
            "Name": "BR_IntroLength",
            "DefaultValue": "10",
            "HelpString": "Intro Length"
        },
        {
            "Name": "BR_MinNumChest",
            "DefaultValue": "20",
            "HelpString": "The Minimum Number of Chests"
        },
        {
            "Name": "BR_SpawnWithMainWeapon",
            "DefaultValue": "0",
            "HelpString": "Spawn with Primary Weapon"
        },
        {
            "Name": "BR_SpawnWithSecondaryWeapon",
            "DefaultValue": "1",
            "HelpString": "Spawn with Secondary Weapon"
        },
        {
            "Name": "BR_SpawnWithAntiTitanWeapon",
            "DefaultValue": "0",
            "HelpString": "Spawn with Anti-Titan Weapon"
        },
        {
            "Name": "BR_SpawnMainWeapon",
            "DefaultValue": "",
            "HelpString": "Primary Spawn Weapon"
        },
        {
            "Name": "BR_SpawnSecondaryWeapon",
            "DefaultValue": "mp_weapon_semipistol",
            "HelpString": "Secondary Spawn Weapon"
        },
        {
            "Name": "BR_SpawnAntiTitanWeapon",
            "DefaultValue": "",
            "HelpString": "Anti-Titan Spawn Weapon"
        },
        {
            "Name": "BR_LOBBY_WaitingVoteTime",
            "DefaultValue": "30",
            "HelpString": ""
        },        {
            "Name": "BR_SOLO_MinPlayerForHighlight",
            "DefaultValue": "2",
            "HelpString": "The required player needed to highlight player"
        },
        {
            "Name": "TBR_EnableDevMod",
            "DefaultValue": "0",
            "HelpString": "Enable Developer Mode"
        }
    ],
    "Scripts": [
        {
            "Path": "gamemodes/_gamemode_TBR.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "gamemodes/cl_gamemode_TBR.nut",
            "RunOn": "CLIENT && MP"
        },
        {
            "Path": "gamemodes/sh_gamemode_TBR.nut",
            "RunOn": "(CLIENT || SERVER) && MP",
            "ClientCallback": {
                "Before": "TBR_init"
            },
            "ServerCallback": {
                "Before": "TBR_init"
            }
        },
        {
            "Path": "TBR_Utils.nut",
            "RunOn": "SERVER && MP"
        }
    ],

    "Localisation": [
        "resource/TBR_localisation_%language%.txt"
    ]
}