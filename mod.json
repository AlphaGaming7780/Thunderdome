{
    "Name" : "Thunderdome",
    "Description" : "Add a Battle Royale gamemode to Titanfall 2.",
    "RequiredOnClient": true,
    "Version": "2.0.0",
    "LoadPriority": 1,
    "ConVars": [
        {
            "Name": "TD_min_players",
            "DefaultValue": "2",
            "HelpString": "The Minimum required Player"
        },
        {
            "Name": "TD_EnableDevMod",
            "DefaultValue": "0",
            "HelpString": "Enable Developer Mode"
        }
    ],
    "Scripts": [
        {
            "Path": "gamemodes/_gamemode_TD.nut",
            "RunOn": "SERVER && MP"
        },
        {
            "Path": "gamemodes/cl_gamemode_TD.nut",
            "RunOn": "CLIENT && MP"
        },
        {
            "Path": "gamemodes/sh_gamemode_TD.nut",
            "RunOn": "(CLIENT || SERVER) && MP",
            "ClientCallback": {
                "Before": "TD_init"
            },
            "ServerCallback": {
                "Before": "TD_init"
            }
        },
        {
            "Path": "TD_Utils.nut",
            "RunOn": "SERVER && MP",
            "ServerCallback": {
                "Before": "TD_Utils_INIT"
            }
        },
        {
            "Path": "ui/TD_UI.nut",
            "RunOn": "UI",
            "UICallback": {
                "Before": "TD_UI"
            }
        }
    ],

    "Localisation": [
        "resource/TD_localisation_%language%.txt"
    ],

    "Dependencies": {
        "PLAYER_HAS_MOD_SETTINGS": "Mod Settings"
    }
}